<div class="container">
  <h1>THE LONGEST WORD</h1>
  <div id="deck">
    <% @new_game.each do |letter| %>
      <div class="card"><%= letter %></div>
    <% end %>
  </div>

  <div class="submission">
    <form action="submit">
      <input type="text" name="play" class="answer">
      <input type="button" value="Submit" class="btn">
    </form>
  </div>
</div>
